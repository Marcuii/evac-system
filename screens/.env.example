# ============================================================
# Emergency Evacuation Screens - Environment Configuration
# ============================================================
# Author: Marcelino Saad
# 
# Copy this file to .env and update values as needed
# Note: Vite requires VITE_ prefix for client-side env variables
# ============================================================

# ===================
# Server Configuration
# ===================

# Default backend server URL
VITE_DEFAULT_SERVER_URL=http://localhost:3000

# Default screen ID for testing
VITE_DEFAULT_SCREEN_ID=N1

# ===================
# USRP Bridge Settings
# ===================

# USRP Bridge service port
VITE_USRP_BRIDGE_PORT=3062

# ===================
# Connection Settings
# ===================

# Maximum reconnection attempts before USRP fallback
VITE_MAX_RECONNECT_ATTEMPTS=5

# Delay between reconnection attempts (ms)
VITE_RECONNECT_DELAY=3000

# Server health check interval (ms)
VITE_SERVER_CHECK_INTERVAL=10000

# USRP bridge status check interval (ms)
VITE_BRIDGE_CHECK_INTERVAL=15000

# ===================
# Logging Settings
# ===================

# Maximum number of log entries to keep in memory
VITE_MAX_LOG_ENTRIES=200

# ===================
# Broadcast Settings
# ===================

# BroadcastChannel name for same-device screen sync
VITE_BROADCAST_CHANNEL_NAME=ees-screen-sync
