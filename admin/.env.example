# ============================================================
# EES Admin Dashboard Environment Configuration
# ============================================================
# Copy this file to .env for local development
# Copy to .env.local for local overrides (not committed to git)
#
# Vite requires VITE_ prefix for client-side variables
# ============================================================

# --------------------------
# Server Configuration
# --------------------------
# Port on which the admin dashboard runs (default: 3030)
VITE_PORT=3030

# --------------------------
# API Configuration
# --------------------------
# Backend server URL (where the EES server is running)
VITE_API_URL=http://localhost:3000

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# --------------------------
# Application Settings
# --------------------------
# Application name displayed in the UI
VITE_APP_NAME=EES Admin Dashboard

# Application version (shown in settings)
VITE_APP_VERSION=1.0.0

# --------------------------
# UI Behavior
# --------------------------
# Auto-refresh interval for data (milliseconds)
# Used for dashboard stats and status updates
VITE_REFRESH_INTERVAL=30000

# Toast notification display duration (milliseconds)
VITE_TOAST_DURATION=4000

# Maximum log entries to keep in browser memory
VITE_MAX_LOG_ENTRIES=100

# --------------------------
# Related Services URLs
# Used for quick links in the settings page
# --------------------------
# Evacuation Screens Application URL
VITE_SCREENS_URL=http://localhost:3060

# Mock Services URL (for testing)
VITE_MOCK_SERVICES_URL=http://localhost:3090

# --------------------------
# Authentication
# --------------------------
# Default admin token for development
# In production, this should be set securely
VITE_DEFAULT_ADMIN_TOKEN=admin-secret-token-2026
